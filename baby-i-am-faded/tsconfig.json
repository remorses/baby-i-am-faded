{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "moduleResolution": "Node",
        "lib": ["es2017", "es7", "es6", "DOM"],
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "include": ["src"]
}
